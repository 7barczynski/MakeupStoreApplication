<thlogic>
    <!-- Part with slider image and main message -->
    <attr sel="#appName"
        th:text="${@AppProperties.getApplicationName()}"/>
    <attr sel="#aboutWelcomeMessage"
        th:text="#{about.welcome.message}"/>
    <attr sel="#goToIndex"
        th:href="@{__${T(com.tbar.makeupstoreapplication.utility.AppMappings).HOME}__}"
        th:text="#{about.enter.app}"/>

    <!-- Part with about and how to message -->
    <attr sel="#aboutMainMessage"
          th:text="#{about.main.message}"/>
    <attr sel="#aboutMsg1stPart"
          th:text="#{about.message.first.part}"/>
    <attr sel="#aboutMsg2ndPart"
          th:text="#{about.message.second.part}"/>
    <attr sel="#aboutMsg3rdPart"
          th:text="#{about.message.third.part}"/>
    <attr sel="#makeupApiLink"
          th:href="@{__${@AppProperties.getMakeupApiUrl()}__}"/>
    <attr sel="#aviatoLink"
          th:href="@{__${@AppProperties.getAviatoUrl()}__}"/>
    <attr sel="#howToMsg1stPart"
          th:text="#{about.howto.message.first.part}"/>
    <attr sel="#howToMsg2ndPart"
          th:text="#{about.howto.message.second.part}"/>
    <attr sel="#howToMsg3rdPart"
          th:text="#{about.howto.message.third.part}"/>
    <attr sel="#howToMsg4thPart"
          th:text="#{about.howto.message.fourth.part}"/>
    <attr sel="#shopLink"
          th:href="@{__${T(com.tbar.makeupstoreapplication.utility.AppMappings).SHOP}__}"
          th:text="#{about.howto.shop.view}"/>

    <!-- Part with self-promotion links and icons -->
    <attr sel="#myGitHub"
        th:href="@{__${@AppProperties.getGithubUrl()}__}"/>
    <attr sel="#gitHubImage"
        th:src="@{__${@AppProperties.getGithubImageUrl()}__}"/>
    <attr sel="#myGitHubText"
        th:text="#{about.github.message}"/>
    <attr sel="#myLinkedIn"
          th:href="@{__${@AppProperties.getLinkedinUrl()}__}"/>
    <attr sel="#linkedInImage"
          th:src="@{__${@AppProperties.getLinkedinImageUrl()}__}"/>
    <attr sel="#myLinkedInText"
          th:text="#{about.linkedin.message}"/>
    <attr sel="#myMail"
          th:href="@{__${@AppProperties.getMailUrl()}__}"/>
    <attr sel="#mailImage"
          th:src="@{__${@AppProperties.getMailImageUrl()}__}"/>
    <attr sel="#myMailText"
          th:text="#{about.mail.message}"/>

    <!-- Footer -->
    <attr sel="#footerTemplate"
        th:replace="~{fragments/footer :: footerFragment}"/>

    <!-- Scripts -->
    <attr sel="#scriptTemplate"
          th:replace="~{fragments/script :: scriptFragment}"/>

</thlogic>
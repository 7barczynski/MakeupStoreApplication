<thlogic>
    <attr sel="#itemFragment"
          th:fragment="itemFragment"/>
    <attr sel="#productSingleLink"
          th:href="@{__${T(com.tbar.makeupstoreapplication.utility.AppMappings).SHOP}__/__${item.getId()}__}"/>
    <attr sel="#itemImage"
          th:src="${item.getImageLink()}"
          th:onerror="|this.src='__${@AppProperties.getNoPhotoImageUrl()}__'|"/>
    <attr sel="#itemName"
          th:href="@{__${T(com.tbar.makeupstoreapplication.utility.AppMappings).SHOP}__/__${item.getId()}__}"
          th:text="${item.getName()}"/>
    <attr sel="#itemPrice"
          th:text="${(item.getPriceSign() ?: '') + (item.getPrice() ?: '')}"/>
</thlogic>
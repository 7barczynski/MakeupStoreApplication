<thlogic>
    <!-- Head -->
    <attr sel="#headTemplate"
          th:replace="~{fragments/head :: headFragment}"/>

    <!-- Top header -->
    <attr sel="#topHeaderTemplate"
          th:replace="~{fragments/top-header :: topHeaderFragment}"/>

    <!-- Menu -->
    <attr sel="#mainMenuTemplate"
          th:replace="~{fragments/main-menu :: mainMenuFragment}"/>

    <!-- Breadcrumbs -->
<!--    TODO Breadcrumby są bardzo źle zrobione, może da się łatwo wrzucić listę z przetłumaczonymi nazwami oraz z linkami?-->
    <attr sel="#breadcrumbsTemplate"
          th:replace="~{fragments/breadcrumbs :: breadcrumbsFragment(pageName=#{shop.name}, homeName=#{home.name})}"/>

    <!-- Product -->
    <attr sel="#productImage"
          th:src="@{${itemSingle.getImageLink()}}"/>
    <attr sel="#productName"
          th:text="${itemSingle.getName()}"/>
    <attr sel="#productPrice"
          th:text="${itemSingle.getPrice()}"/>
    <attr sel="#productDescription"
          th:text="${itemSingle.getDescription()}"/>
    <attr sel="#colorCondition"
          th:if="${itemSingle.getProductColors().length != 0}"/>
    <attr sel="#colorName"
          th:text="|#{color.name}:|"/>
    <attr sel="#colorForEach"
          th:each="color : ${itemSingle.getProductColors()}"/>
    <attr sel="#colorHex"
          th:style="'background-color: ' + ${color.getHexValue()} + ';'"/>

    <!-- Footer -->
    <attr sel="#footerTemplate"
          th:replace="~{fragments/footer :: footerFragment}"/>

    <!-- Scripts -->
    <attr sel="#scriptTemplate"
          th:replace="~{fragments/script :: scriptFragment}"/>

</thlogic>